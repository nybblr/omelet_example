<%
	# Organize into month bins
	h = {}
	for r in @results do
		month = Date.parse(r[:date]).strftime("%B")
		h[month] ||= []
		h[month] << r
	end

	string = ""
	cats = h["January"].map {|r| r[:category] }

	string += "['Month', '#{cats.join "', '"}'],\n"
	h.each do |m, v|
		string += "['#{m}', "
		for r in v do
			string += "#{r[:units]}, "
		end
		string += "],\n"
	end

